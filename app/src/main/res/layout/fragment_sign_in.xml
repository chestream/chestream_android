<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:typeface="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical|center|center_horizontal"
    android:gravity="center_vertical|center|center_horizontal"
    android:background="#60000000">

    <kuchbhilabs.chestream.helpers.TypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:id="@+id/chestream"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:text="Chestream"
        android:textColor="#ffffff"
        android:textSize="60sp"
        android:textStyle="bold"
        typeface:typeface="HelveticaNeue-UltraLight"/>

    <kuchbhilabs.chestream.helpers.TypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/text"
        android:layout_below="@id/chestream"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:text="A whole new look at the world around you"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="normal"
        typeface:typeface="HelveticaNeue-UltraLight"/>

    <LinearLayout
        android:id="@+id/foo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/text"
        android:background="@android:color/transparent"
        >

        <Button
            android:id="@+id/btn_fb"
            android:layout_width="70dp"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:alpha="0.75"
            android:background="@drawable/facebook500"
            android:layout_height="70dp" />

        <Button
            android:id="@+id/btn_tw"
            android:layout_width="70dp"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:alpha="0.75"
            android:layout_marginRight="20dp"
            android:background="@drawable/twitter"
            android:layout_height="70dp" />

        <Button
            android:id="@+id/btn_gp"
            android:layout_width="70dp"
            android:textSize="18sp"
            android:alpha="0.75"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/googleplus"
            android:layout_height="70dp" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_skip"
        android:layout_width="match_parent"
        android:textSize="24sp"
        android:background="#18000000"
        android:text="Skip"
        android:textStyle="normal"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_height="60dp"/>

</RelativeLayout>