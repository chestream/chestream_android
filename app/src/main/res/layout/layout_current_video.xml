<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/tools"
    xmlns:typeface="http://schemas.android.com/apk/res-auto"
    android:id="@+id/currentVideo"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="#95000000">

    <LinearLayout
        android:id="@+id/current_video_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="#009688"
        android:orientation="vertical">


        <com.facebook.drawee.view.SimpleDraweeView
            fresco:roundAsCircle="true"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/profile_picture"
            android:paddingTop="15dp"
            />


        <kuchbhilabs.chestream.helpers.TypefaceTextView
            android:id="@+id/video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Video"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            typeface:typeface="HelveticaNeue-UltraLight" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Username"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="normal" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/video_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:paddingLeft="20dp"
                android:textColor="#ffffff"
                android:text="location"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/video_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="200 upvotes"
                android:textColor="#ffffff"
                android:textSize="24sp" />

        </RelativeLayout>


    </LinearLayout>

</FrameLayout>
