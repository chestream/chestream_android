<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/tools"
    xmlns:typeface="http://schemas.android.com/apk/res-auto"
    android:id="@+id/current_video_details"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_gravity="top"
    android:background="#77000000"
    android:gravity="top"
    android:orientation="vertical">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/profile_picture"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:paddingTop="25dp"
        fresco:roundAsCircle="true" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

        <kuchbhilabs.chestream.helpers.TypefaceTextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:paddingRight="10dp"
            android:textStyle="normal"
            typeface:typeface="HelveticaNeue-UltraLight"/>

            <kuchbhilabs.chestream.helpers.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_gravity="center"
                typeface:typeface="HelveticaNeue-UltraLight"/>


        <kuchbhilabs.chestream.helpers.TypefaceTextView
            android:id="@+id/video_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="#ffffff"
            android:textSize="14sp"
            typeface:typeface="HelveticaNeue-UltraLight"/>

        </LinearLayout>






    <kuchbhilabs.chestream.helpers.TypefaceTextView
        android:id="@+id/video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        typeface:typeface="HelveticaNeue-UltraLight" />



    <TextView
        android:id="@+id/video_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:paddingBottom="40dp"/>


</LinearLayout>

