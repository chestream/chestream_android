<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="kuchbhilabs.chestream.QueueFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_view"
        />

    <com.getbase.floatingactionbutton.AddFloatingActionButton
        android:id="@+id/upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        fab:fab_plusIconColor="@android:color/white"
        fab:fab_colorNormal="#009688"
        fab:fab_colorPressed="#009688"

        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"/>


    <kuchbhilabs.chestream.helpers.CircularRevealView
        android:id="@+id/reveal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"/>


</FrameLayout>
