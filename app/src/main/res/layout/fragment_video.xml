<?xml version="1.0" encoding="utf-8"?>

<kuchbhilabs.chestream.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:panelHeight="30dp"
    sothree:shadowHeight="0dp"
    sothree:dragViewClickable="false">

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#009688">
<!--
        <SurfaceView
            android:id="@+id/main_surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" /> -->
        <VideoView
            android:id="@+id/main_video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include layout="@layout/item_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/singleComment"
            android:layout_gravity="bottom"
            android:layout_marginBottom="50dp"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/comments"
        android:background="#66000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"></FrameLayout>


</kuchbhilabs.chestream.slidinguppanel.SlidingUpPanelLayout>