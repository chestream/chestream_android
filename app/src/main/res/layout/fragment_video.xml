<?xml version="1.0" encoding="utf-8"?>

<kuchbhilabs.chestream.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:dragViewClickable="true"
    sothree:panelHeight="236dp"
    sothree:shadowHeight="0dp">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#009688"
        android:orientation="vertical">

        <SurfaceView
            android:id="@+id/main_surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/commentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal|top"
            android:text="Great Video"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:visibility="gone" />

        <!--
        <VideoView
            android:id="@+id/main_video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical" />
-->

    </FrameLayout>


    <include layout="@layout/layout_panel_bottom" />


</kuchbhilabs.chestream.slidinguppanel.SlidingUpPanelLayout>