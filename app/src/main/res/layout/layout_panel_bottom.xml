<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:typeface="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@android:color/transparent">

    <include
        android:id="@+id/loading_layout"
        layout="@layout/loading_layout" />

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:padding="15dp"
         android:gravity="bottom|left"
         android:layout_gravity="bottom|left">

         <kuchbhilabs.chestream.helpers.TypefaceTextView
             android:id="@+id/video_title"
             android:layout_width="wrap_content"
             android:paddingRight="70dp"
             android:layout_height="wrap_content"
             android:maxLines="2"
             android:ellipsize="end"
             android:textColor="#ffffff"
             android:textSize="22sp"
             typeface:typeface="HelveticaNeue-Light" />

         <kuchbhilabs.chestream.helpers.TypefaceTextView
             android:id="@+id/video_location"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="#ffffff"
             android:textSize="14sp"
             typeface:typeface="HelveticaNeue-Light"/>


         </LinearLayout>



    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/bottomLayout">

        <!--<include layout="@layout/layout_uploader_video"-->
            <!--android:background="#95000000"/>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#95000000"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/profile_picture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"
                fresco:roundAsCircle="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/profile_picture"
                android:paddingLeft="15dp"
               android:layout_centerVertical="true">

                <kuchbhilabs.chestream.helpers.TypefaceTextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    typeface:typeface="HelveticaNeue-Light"/>

                <TextView
                    android:id="@+id/video_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:textColor="#ffffff"
                    android:textSize="16sp"/>
                </LinearLayout>

            <kuchbhilabs.chestream.helpers.TypefaceTextView
                android:id="@+id/commentsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:layout_marginRight="15dp"
                typeface:typeface="HelveticaNeue-Light"/>
            </RelativeLayout>

    <FrameLayout
        android:id="@+id/comments"
        android:background="#95000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

    </FrameLayout>

    </LinearLayout>

</LinearLayout>