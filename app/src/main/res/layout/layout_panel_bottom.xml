<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:typeface="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:background="@android:color/transparent">



    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/bottomLayout"
        android:background="#ffffff">

        <!--<include layout="@layout/layout_uploader_video"-->
            <!--android:background="#95000000"/>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/profile_picture_comments"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"
                fresco:roundAsCircle="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/profile_picture_comments"
                android:paddingLeft="15dp"
                android:layout_centerVertical="true">

                <kuchbhilabs.chestream.helpers.TypefaceTextView
                    android:id="@+id/username_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:maxLines="1"
                    android:paddingRight="50dp"
                    android:ellipsize="end"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    typeface:typeface="HelveticaNeue-Light"/>

                <TextView
                    android:id="@+id/video_score_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15sp"/>
                </LinearLayout>

            <kuchbhilabs.chestream.helpers.TypefaceTextView
                android:id="@+id/commentsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                typeface:typeface="HelveticaNeue-Light"/>
            </RelativeLayout>

        <View
            android:id="@+id/dividerView"
            android:paddingTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dce4e6"
            android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/comments"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

    </FrameLayout>

    </LinearLayout>

</LinearLayout>