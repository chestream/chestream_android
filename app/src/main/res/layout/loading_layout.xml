<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dots="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:typeface="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:gravity="top"
    android:orientation="horizontal">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loading_frame"
        android:background="@drawable/background"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <kuchbhilabs.chestream.helpers.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Initializing the Stream"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            typeface:typeface="HelveticaNeue-Light" />

        <kuchbhilabs.chestream.helpers.DotsTextView
            android:id="@+id/dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingTop="10dp"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            dots:autoplay="true"
            dots:period="1000" />


    </LinearLayout>
</FrameLayout>